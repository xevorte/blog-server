<%- include ./partials/header.ejs -%>

<div id="app">

  <%- include ./partials/message.ejs -%>

  <%- include ./partials/sidebar.ejs -%>

  <div id="main">
    <header class="mb-3">
      <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
      </a>
    </header>

    <div class="page-heading">
      <h3>Profile Statistics</h3>
    </div>
    <div class="page-content">
      <section class="row">
        <div class="col-12">
          <div class="row align-items-center">
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon purple mb-2">
                        <i class="iconly-boldDocument"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">
                        Posts
                      </h6>
                      <h6 class="font-extrabold mb-1"><%= data.posts.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon blue mb-2">
                        <i class="iconly-boldUser1"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">Authors</h6>
                      <h6 class="font-extrabold mb-1"><%= data.authors.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon green mb-2">
                        <i class="iconly-boldFolder"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">Categories</h6>
                      <h6 class="font-extrabold mb-1"><%= data.categories.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon red mb-2">
                        <i class="iconly-boldBookmark"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">Tags</h6>
                      <h6 class="font-extrabold mb-1"><%= data.tags.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon yellow mb-2">
                        <i class="iconly-boldMessage"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">Comments</h6>
                      <h6 class="font-extrabold mb-1"><%= data.comments.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-6 col-lg-2 col-md-6">
              <div class="card">
                <div class="card-body p-3 pb-2">
                  <div class="row align-items-center">
                    <div class="col-md-4 col-lg-12 col-xl-12 col-xxl-4 d-flex justify-content-start pe-2">
                      <div class="stats-icon primary mb-2">
                        <i class="iconly-boldProfile"></i>
                      </div>
                    </div>
                    <div class="col-md-8 col-lg-12 col-xl-12 col-xxl-8">
                      <h6 class="text-muted font-semibold">Users</h6>
                      <h6 class="font-extrabold mb-1"><%= data.users.length %></h6>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="card">
                <div class="card-header">
                  <h4>Dashboard Visitors</h4>
                </div>
                <div class="card-body">
                  <div id="chart-profile-visit"></div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12 col-xl-4">
              <div class="card">
                <div class="card-header">
                  <h4>Visitors by State</h4>
                </div>
                <div class="card-body">
                  <div class="row">
                    <div class="col-6">
                      <div class="d-flex align-items-center">
                        <svg class="bi text-primary" width="32" height="32" fill="blue" style="width: 10px">
                          <use xlink:href="/dist/assets/images/bootstrap-icons.svg#circle-fill" />
                        </svg>
                        <h5 class="mb-0 ms-3">Europe</h5>
                      </div>
                    </div>
                    <div class="col-6">
                      <h5 class="mb-0">862</h5>
                    </div>
                    <div class="col-12">
                      <div id="chart-europe"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <div class="d-flex align-items-center">
                        <svg class="bi text-success" width="32" height="32" fill="blue" style="width: 10px">
                          <use xlink:href="/dist/assets/images/bootstrap-icons.svg#circle-fill" />
                        </svg>
                        <h5 class="mb-0 ms-3">America</h5>
                      </div>
                    </div>
                    <div class="col-6">
                      <h5 class="mb-0">375</h5>
                    </div>
                    <div class="col-12">
                      <div id="chart-america"></div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-6">
                      <div class="d-flex align-items-center">
                        <svg class="bi text-danger" width="32" height="32" fill="blue" style="width: 10px">
                          <use xlink:href="/dist/assets/images/bootstrap-icons.svg#circle-fill" />
                        </svg>
                        <h5 class="mb-0 ms-3">Indonesia</h5>
                      </div>
                    </div>
                    <div class="col-6">
                      <h5 class="mb-0">1025</h5>
                    </div>
                    <div class="col-12">
                      <div id="chart-indonesia"></div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-12 col-xl-8">
              <div class="card">
                <div class="card-header">
                  <h4>Latest Comments</h4>
                </div>
                <div class="card-body">
                  <div class="table-responsive">
                    <table class="table table-hover table-lg">
                      <thead>
                        <tr>
                          <th>Name</th>
                          <th>Comment</th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td class="col-3">
                            <div class="d-flex align-items-center">
                              <div class="avatar avatar-md">
                                <img src="/dist/assets/images/faces/5.jpg" />
                              </div>
                              <p class="font-bold ms-3 mb-0">Si Pretty</p>
                            </div>
                          </td>
                          <td class="col-auto">
                            <p class="mb-0">
                              Congratulations on your graduation!
                            </p>
                          </td>
                        </tr>
                        <tr>
                          <td class="col-3">
                            <div class="d-flex align-items-center">
                              <div class="avatar avatar-md">
                                <img src="/dist/assets/images/faces/2.jpg" />
                              </div>
                              <p class="font-bold ms-3 mb-0">Si Cool</p>
                            </div>
                          </td>
                          <td class="col-auto">
                            <p class="mb-0">
                              Wow amazing design! Can you make another
                              tutorial for this design?
                            </p>
                          </td>
                        </tr>
                        <tr>
                          <td class="col-3">
                            <div class="d-flex align-items-center">
                              <div class="avatar avatar-md">
                                <img src="/dist/assets/images/faces/3.jpg" />
                              </div>
                              <p class="font-bold ms-3 mb-0">Si Perfect</p>
                            </div>
                          </td>
                          <td class="col-auto">
                            <p class="mb-0">
                              I hope we can continue live together!
                            </p>
                          </td>
                        </tr>
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        <div class="row m-0 p-0">
          <div class="col-12 col-lg-6">
            <div class="card">
              <div class="card-header">
                <h4>Recent Messages</h4>
              </div>
              <div class="card-content pb-4">
                <div class="recent-message d-flex px-4 py-3">
                  <div class="avatar avatar-lg">
                    <img src="/dist/assets/images/faces/4.jpg" />
                  </div>
                  <div class="name ms-4">
                    <h5 class="mb-1">Hank Schrader</h5>
                    <h6 class="text-muted mb-0">@johnducky</h6>
                  </div>
                </div>
                <div class="recent-message d-flex px-4 py-3">
                  <div class="avatar avatar-lg">
                    <img src="/dist/assets/images/faces/5.jpg" />
                  </div>
                  <div class="name ms-4">
                    <h5 class="mb-1">Dean Winchester</h5>
                    <h6 class="text-muted mb-0">@imdean</h6>
                  </div>
                </div>
                <div class="recent-message d-flex px-4 py-3">
                  <div class="avatar avatar-lg">
                    <img src="/dist/assets/images/faces/1.jpg" />
                  </div>
                  <div class="name ms-4">
                    <h5 class="mb-1">John Dodol</h5>
                    <h6 class="text-muted mb-0">@dodoljohn</h6>
                  </div>
                </div>
                <div class="px-4">
                  <button class="btn btn-block btn-xl btn-outline-primary font-bold mt-3">
                    Start Conversation
                  </button>
                </div>
              </div>
            </div>
          </div>
          <div class="col-12 col-lg-6">
            <div class="card">
              <div class="card-header">
                <h4>Visitors Profile</h4>
              </div>
              <div class="card-body">
                <div id="chart-visitors-profile"></div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <%- include ./partials/footer.ejs -%>

  </div>
</div>

<%- include ./partials/finisher.ejs -%>

<!-- Need: Apexcharts -->
<script src="/dist/assets/extensions/apexcharts/apexcharts.min.js"></script>
<script src="/dist/assets/js/pages/dashboard.js"></script>