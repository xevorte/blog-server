<%- include ../../partials/header.ejs -%>

<div id="app">

    <%- include ../../partials/message.ejs -%>

    <%- include ../../partials/sidebar.ejs -%>

    <div id="main" class="d-flex flex-column justify-content-between">
        <div class="content">
            <header class="mb-3">
                <a href="#" class="burger-btn d-block d-xl-none">
                    <i class="bi bi-justify fs-3"></i>
                </a>
            </header>

            <div class="heading d-flex align-items-center">
                <a href="/tags" class="text-primary font-semibold icon icon-left me-3">
                    <i class="bi bi-chevron-left"></i>
                </a>
                <h3 class="m-0">Update Current Tag</h3>
            </div>

            <div class="page-content mt-5">
                <form action="/tags/edit/<%= data._id %>?_method=PUT" method="POST">
                    <div class="card mb-4">
                        <div class="card-body p-4">
                            <div class="d-flex">
                                <div class="form-group w-50 pe-3">
                                    <label for="name" class="mb-2">Name</label>
                                    <input type="text" class="form-control" id="name" name="name"
                                        placeholder="Enter name" style="padding: 11px 13px;" value="<%= data.name %>" required />
                                </div>
                                <div class="form-group w-50 ps-3">
                                    <label for="status" class="mb-2">Status</label>
                                    <select class="choices form-select" id="status" name="status">
                                        <option hidden disabled selected>Choose status</option>
                                        <option value="active" <%= data.status === 'active' ? 'selected' : '' %>>Active</option>
                                        <option value="nonactive" <%= data.status === 'nonactive' ? 'selected' : '' %>>Nonactive</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary btn-block font-semibold py-2 mb-5">Save</button>
                </form>
            </div>
        </div>

        <%- include ../../partials/footer.ejs -%>
    </div>

</div>

<%- include ../../partials/finisher.ejs -%>